<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/show_word"
            android:text="단어명"
            android:textSize="25sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:paddingHorizontal="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/show_mean1"
            android:text="뜻1"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            />
        <TextView
            android:id="@+id/show_mean2"
            android:text="뜻2"
            android:textSize="16sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            />
        <TextView
            android:id="@+id/show_ex1"
            android:text="예1"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            />
        <TextView
            android:id="@+id/show_ex2"
            android:text="예2"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

        <Button
            android:id="@+id/show_tag1"
            android:text=""
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="7dp"
            android:gravity="center"
            android:background="@drawable/tag_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickTag1"/>
        <Button
            android:id="@+id/show_tag2"
            android:text=""
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="7dp"
            android:gravity="center"
            android:background="@drawable/tag_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="onClickTag2"/>


    </LinearLayout>


    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

