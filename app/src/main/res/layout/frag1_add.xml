<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="50dp"
        android:weightSum="10"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_weight="10"

            android:autoSizeTextType="uniform"
            android:gravity="bottom"
            android:text="단어추가"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="2"
            android:gravity="bottom"
            android:text="일반"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toEndOf="@+id/title" />

    </androidx.constraintlayout.widget.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.8"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:weightSum="5"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/word_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="어휘"
                    android:textColor="#000000"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/mean_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/word_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="뜻"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/ex_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mean_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:text="예문"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tag_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:text="태그"
                    android:textColor="#000000"
                    android:textSize="25sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/word_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:ems="20"
                    android:textSize="15dp"
                    android:inputType="textPersonName"
                    android:hint="어휘를 입력하세요"/>

                <EditText
                    android:id="@+id/mean_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/word_text"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    android:ems="50"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:textSize="15dp"
                    android:hint="첫 번째 뜻을 입력하세요"/>

                <EditText
                    android:id="@+id/mean_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/mean_text1"
                    android:layout_centerHorizontal="true"
                    android:ems="50"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:textSize="15dp"
                    android:hint="두 번째 뜻을 입력하세요" />


                <EditText
                    android:id="@+id/ex_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/mean_text2"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:ems="50"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:textSize="15dp"
                    android:hint="첫 번째 뜻을 입력하세요"/>

                <EditText
                    android:id="@+id/ex_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/ex_text1"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:ems="50"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:textSize="15dp"
                    android:hint="두 번째 뜻을 입력하세요"/>

                <EditText
                    android:id="@+id/tag_text1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:ems="10"
                    android:hint="태그1"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/tag_text2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tag_text1"
                    android:layout_alignParentBottom="true"
                    android:ems="10"
                    android:hint="태그2"
                    android:inputType="textPersonName" />


            </RelativeLayout>



        </LinearLayout>


    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cancel_button"
            android:text="취소"
            android:textSize="15sp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/ok_button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/cancel_button"
            android:background="@drawable/ok_button"
            android:text="확인"
            android:textSize="15sp"
            android:textColor="#FFFFFF" />

        </RelativeLayout>


    </RelativeLayout>




</LinearLayout>