<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chokipedia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_chokipedia3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_chokipedia3_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustNothing"/>

        <!--        Popup Activity -->

        <activity
            android:name=".AddTagActivity"
            android:theme="@style/WhitePopUp"/>
        <activity
            android:name=".ShowWordActivity"
            android:theme="@style/WhitePopUp"/>
        <activity
            android:name=".AddWordActivity"
            android:theme="@style/WhitePopUp"
            android:windowSoftInputMode="adjustResize"/>

<!--        Dialog      -->
        <activity
            android:name=".CheckDialog"
            android:theme="@style/LightGrayPopUp">
        </activity>
        <activity
            android:name=".EditDeleteDialog"
            android:theme="@style/LightGrayPopUp">
        </activity>

    </application>

</manifest>